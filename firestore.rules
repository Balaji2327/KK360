rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function getUserRole() {
      let userDoc = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(userDoc) ? get(userDoc).data.role : null;
    }
    
    function isAdmin() {
      return request.auth != null && getUserRole() == 'admin';
    }
    
    function isTutor() {
      return request.auth != null && getUserRole() == 'tutor';
    }
    
    function isStudent() {
      return request.auth != null && getUserRole() == 'student';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      // Allow user to write to their own document mostly for profile info, but prevent changing 'role'
      // unless they are Admin.
      // FIX: Allow admins to create documents for other users
      allow create: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow update: if request.auth != null && (
        isAdmin() || 
        (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']))
      );
      allow delete: if isAdmin();
    }
    
    // Classes collection
    match /classes/{classId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (request.resource.data.tutorId == request.auth.uid || isAdmin());
      
      allow update: if request.auth != null && (
        isAdmin() ||
        // Tutor owner can update anything
        resource.data.tutorId == request.auth.uid ||
        // Members can only update the 'members' list (to join/leave specifically?)
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']) &&
         (
           // Case 1: Adding self
           (request.resource.data.members.hasAll(resource.data.get('members', [])) &&
            request.resource.data.members.hasAny([request.auth.uid]) &&
            !resource.data.get('members', []).hasAny([request.auth.uid]))
           ||
           // Case 2: Removing self
           (resource.data.get('members', []).hasAll(request.resource.data.members) &&
            resource.data.get('members', []).hasAny([request.auth.uid]) &&
            !request.resource.data.members.hasAny([request.auth.uid]))
         )
        )
      );
      
      allow delete: if request.auth != null && (resource.data.tutorId == request.auth.uid || isAdmin());
    }
    
    // Assignments collection
    match /assignments/{assignmentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
    }

    // Assignment Submissions
    match /assignment_submissions/{submissionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      // Ensure student can only update their own submission
      allow update: if request.auth != null && (resource.data.studentId == request.auth.uid || isAdmin() || isTutor());
    }

    // Tests collection
    match /tests/{testId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
    }

    // Test Submissions collection
    match /test_submissions/{submissionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
    }
    
    // Invites collection
    match /invites/{inviteId} {
      // Allow creation by Tutors or Admins
      allow create: if request.auth != null && (isTutor() || isAdmin());
      
      // Allow read/update if:
      // 1. The invite is for this user's email (checked via their user profile OR auth token)
      // 2. The user created the invite
      // 3. The user is an admin
      allow read, update: if request.auth != null && (
        resource.data.invitedUserEmail == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.email ||
        resource.data.invitedUserEmail == request.auth.token.email ||
        resource.data.invitedByUserId == request.auth.uid ||
        isAdmin()
      );
      
      allow delete: if request.auth != null && (
        resource.data.invitedByUserId == request.auth.uid || 
        isAdmin()
      );
    }

    // Units collection
    match /units/{unitId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.tutorId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.tutorId == request.auth.uid;
    }

    // Materials collection
    match /materials/{materialId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
    }

    // Meetings collection
    match /meetings/{meetingId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.createdBy == request.auth.uid || isAdmin());
    }

    // Chat Rooms collection
    match /chatRooms/{chatRoomId} {
      allow read: if request.auth != null && (
        // Tutor can read their own class chat
        (isTutor() && resource.data.tutorId == request.auth.uid) ||
        // Student can read chat of their enrolled class
        (isStudent() && resource.data.studentIds.hasAny([request.auth.uid])) ||
        // Admin can read all chats
        isAdmin()
      );
      
      allow create: if request.auth != null && (isTutor() || isAdmin());
      
      allow update: if request.auth != null && (
        resource.data.tutorId == request.auth.uid || 
        isAdmin()
      );
      
      allow delete: if isAdmin();

      // Messages subcollection
      match /messages/{messageId} {
        allow read: if request.auth != null && (
          // Tutor can read messages from their chat room
          (isTutor() && get(/databases/$(database)/documents/chatRooms/$(chatRoomId)).data.tutorId == request.auth.uid) ||
          // Student can read messages from their chat room
          (isStudent() && get(/databases/$(database)/documents/chatRooms/$(chatRoomId)).data.studentIds.hasAny([request.auth.uid])) ||
          // Admin can read all messages
          isAdmin()
        );
        
        allow create: if request.auth != null && (
          request.resource.data.senderId == request.auth.uid &&
          (
            // Tutor sending message
            (isTutor() && get(/databases/$(database)/documents/chatRooms/$(chatRoomId)).data.tutorId == request.auth.uid) ||
            // Student sending message
            (isStudent() && get(/databases/$(database)/documents/chatRooms/$(chatRoomId)).data.studentIds.hasAny([request.auth.uid]))
          )
        );
        
        allow update: if request.auth != null && (
          request.resource.data.senderId == request.auth.uid ||
          isAdmin()
        );
        
        allow delete: if isAdmin();
      }
    }
  }
}
