rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function getUserRole() {
      let userDoc = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(userDoc) ? get(userDoc).data.role : null;
    }
    
    function isAdmin() {
      return request.auth != null && getUserRole() == 'admin';
    }
    
    function isTutor() {
      return request.auth != null && getUserRole() == 'tutor';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Classes collection
    match /classes/{classId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.tutorId == request.auth.uid;
      
      allow update: if request.auth != null && (
        resource.data.tutorId == request.auth.uid ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']) &&
         request.resource.data.members.hasAll(resource.data.members) &&
         request.resource.data.members.hasAny([request.auth.uid]) &&
         !resource.data.members.hasAny([request.auth.uid])) ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']) &&
         resource.data.members.hasAll(request.resource.data.members) &&
         resource.data.members.hasAny([request.auth.uid]) &&
         !request.resource.data.members.hasAny([request.auth.uid]))
      );
      
      allow delete: if request.auth != null && resource.data.tutorId == request.auth.uid;
    }
    
    // Assignments collection
    match /assignments/{assignmentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
    }

    // Assignment Submissions (NEW)
    match /assignment_submissions/{submissionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow update: if request.auth != null && resource.data.studentId == request.auth.uid;
    }

    // Tests collection
    match /tests/{testId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
    }

    // Test Submissions collection
    match /test_submissions/{submissionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
    }
    
    // Invites collection
    match /invites/{inviteId} {
      allow create: if request.auth != null && isTutor();
      allow read, update: if request.auth != null && (
        resource.data.invitedUserEmail == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.email ||
        resource.data.invitedByUserId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if request.auth != null && (
        resource.data.invitedByUserId == request.auth.uid || 
        isAdmin()
      );
    }
  }
}
